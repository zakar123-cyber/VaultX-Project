{
  "expo": {
    "name": "vaultx",
    "slug": "vaultx",
    "version": "1.0.0",
    "scheme": "vaultx",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.redblade.vaultx",
      "infoPlist": {
        "NSCameraUsageDescription": "VaultX needs camera access to scan QR codes for vault import.",
        "NSPhotoLibraryUsageDescription": "VaultX needs photos access to save QR codes.",
        "NSFaceIDUsageDescription": "VaultX needs FaceID to secure your vault."
      }
    },
    "android": {
      "package": "com.redblade.vaultx",
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow VaultX to access your camera to scan QR codes."
        }
      ],
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      "@react-native-google-signin/google-signin"
    ],
    "extra": {
      "eas": {
        "projectId": "566e4c90-9227-4b75-943e-be90672032b9"
      }
    }
  }
}